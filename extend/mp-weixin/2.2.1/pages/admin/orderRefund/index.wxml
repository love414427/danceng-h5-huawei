<view class="refund-wrapper" style="{{(viewColor)}}"><view class="form-box"><view class="form-item item-txt"><text class="label">审核</text><view class="picker acea-row"><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="{{['agree-count',status==1?'on':'']}}" bindtap="__e"><text class="icon-agree"></text>同意</view><view data-event-opts="{{[['tap',[['e1',['$event']]]]]}}" class="{{['agree-count',status==-1?'on':'']}}" bindtap="__e"><text class="icon-agree"></text>拒绝</view></view></view></view><block wx:if="{{status==1}}"><view class="form-box"><view class="form-item item-txt"><text class="label">商品实际支付(元)</text><view class="picker">{{''+orderInfo.total_price+''}}</view></view><view class="form-item item-txt"><text class="label">运费实际支付(元)</text><view class="picker">{{''+orderInfo.total_postage+''}}</view></view><view class="form-item item-txt"><text class="label">商品购买数量(件)</text><view class="picker">{{''+orderInfo.total_num+''}}</view></view><view class="form-item item-txt"><text class="label">申请退款金额(元)</text><view class="picker">{{''+orderInfo.refund_price+''}}</view></view><view class="form-item item-txt"><text class="label">申请退款数量(件)</text><view class="picker">{{''+orderInfo.refund_num+''}}</view></view></view></block><block wx:if="{{orderInfo.refund_type==2&&status==1}}"><view class="form-box"><view class="form-item item-txt"><text class="label">收货人</text><view class="picker"><input class="p-color" style="text-align:right;" maxlength="10" type="text" placeholder="请输入姓名" data-event-opts="{{[['input',[['__set_model',['$0','mer_delivery_user','$event',[]],['refundInfo']]]]]}}" value="{{refundInfo.mer_delivery_user}}" bindinput="__e"/></view></view><view class="form-item item-txtarea"><text class="label">收货地址</text><view class="txtarea"><textarea value="{{refundInfo.mer_delivery_address}}" placeholder="请输入地址" data-event-opts="{{[['input',[['__set_model',['$0','mer_delivery_address','$event',[]],['refundInfo']]]]]}}" bindinput="__e"></textarea></view></view><view class="form-item item-txt"><text class="label">手机号</text><view class="picker"><input class="p-color" style="text-align:right;" type="text" placeholder="请输入手机号" data-event-opts="{{[['input',[['__set_model',['$0','phone','$event',[]],['refundInfo']]]]]}}" value="{{refundInfo.phone}}" bindinput="__e"/></view></view></view></block><block wx:if="{{status==-1}}"><view class="form-box"><view class="form-item item-txtarea"><text class="label">拒绝理由</text><view class="txtarea"><textarea value="{{fail_message}}" placeholder-class="coarea" placeholder="请填写拒绝退款的理由" data-event-opts="{{[['input',[['__set_model',['','fail_message','$event',[]]]]]]}}" bindinput="__e"></textarea></view></view></view></block><view class="confirm-btn"><view data-event-opts="{{[['tap',[['bindComfirm',['$event']]]]]}}" class="btn-box" bindtap="__e">确认提交</view></view></view>